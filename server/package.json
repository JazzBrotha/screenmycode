{
  "name": "server",
  "version": "1.0.0",
  "description": "screenmycode back end",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "npm run lint && nodemon src/index.ts | pino -o 'short'",
    "dev:debug": "nodemon --exec 'node -r ts-node/register --inspect-brk' src/index.ts  | pino -o 'short'",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "tslint -c tslint.json 'test/**/*.ts' && mocha test/**/*.ts --exit",
    "test:debug": "mocha --inspect-brk test/**/*.ts --exit"
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "pino": "^4.17.5",
    "swagger-express-middleware": "^1.0.0-alpha.12"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.22",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.0.35",
    "@types/mocha": "^2.2.48",
    "@types/pino": "^4.7.1",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "nodemon": "^1.18.4",
    "shelljs": "^0.7.8",
    "supertest": "^3.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
